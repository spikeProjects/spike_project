<div id="sortfilter-qty-selector" class="sortfilter-qty-selector">
    <div class="sortfilter-title" tabindex='0'>
        <span id="sortfilter-qty-title" class="sortfilter-selection-title">
            {@eq key=qty value="-1"}
                How many tickets?
            {:else}
                {qty} 
                {@eq key=qty value="1"}
                    Ticket
                {:else}
                    Tickets
                {/eq}
            {/eq}
        </span>
        <span class="dropdownArrow"><i class="sh-iconset sh-iconset-expand"></i></span>
    </div>
    <div class="select-dropdown">
        <ul id="sortfilter-qty-dropdown">
            <li data-qty-title='All tickets' data-value="-1" class="{@eq key=qty value="-1"}selected{/eq}">All tickets <i class="sh-iconset sh-iconset-ok"></i></li>
            <li data-qty-title='1 Ticket' data-value="1" class="{@eq key=qty value="1"}selected{/eq}">1 Ticket <i class="sh-iconset sh-iconset-ok"></i></li>
            <li data-qty-title='2 Tickets' data-value="2" class="{@eq key=qty value="2"}selected{/eq}">2 Tickets <i class="sh-iconset sh-iconset-ok"></i></li>
            <li data-qty-title='3 Tickets' data-value="3" class="{@eq key=qty value="3"}selected{/eq}">3 Tickets <i class="sh-iconset sh-iconset-ok"></i></li>
            <li data-qty-title='4 Tickets' data-value="4" class="{@eq key=qty value="4"}selected{/eq}">4 Tickets <i class="sh-iconset sh-iconset-ok"></i></li>
            <li data-qty-title='5+ Tickets' data-value="5&#43;" class="{@eq key=qty value="5+"}selected{/eq}">5+ Tickets <i class="sh-iconset sh-iconset-ok"></i></li>
        </ul>
    </div>
</div>
