{@eq key=globals.event_meta.isParking value="false" type="boolean"}
<div id="seatfeature-cont" class="dropdown-cont" tabindex="0">
    <div id="seatfeature-header" class="seatfeature-header">Seat features <i class="sh-iconset sh-iconset-expand"></i></div>
    <div class="select-dropdown">
        <div class="heading">
            <div class="heading-text">Seat features</div>
            <div class="heading-close">
                <i id="seatfeature-x-done" class="sh-iconset sh-iconset-close seatfeature-done"></i>
            </div>
        </div>
        <ul id="seatfeature-dropdown">
            {#seatTraits}
            <li {@eq key=checked value="true"}class="selected"{/eq}>
                <label class="checkbox-label">
                    <span class="checkbox-icon" data-name="seatfeature" data-id="{id}" data-category="{category}" data-category-id="{categoryId}"></span>
                    {@ne key=iconset value=""}
                        <i class="sh-iconset {iconset}"></i>
                    {/ne}
                    <span class="checkbox-text">{category}</span>
                </label>
            </li>
            {/seatTraits}               
        </ul> 
        <div class="footer"><span id="seatfeature-done" class="seatfeature-done">Done</span></div>
    </div>   
</div>
{/eq}