<div id="delivery-cont" class="dropdown-cont" tabindex="0">
    <div id="delivery-header" class="delivery-header">Delivery <i class="sh-iconset sh-iconset-expand"></i></div>
    <div class="select-dropdown">
        <div class="heading">
            <div class="heading-text">Delivery</div>
            <div class="heading-close"> 
                <i id="delivery-x-done" class="sh-iconset sh-iconset-close delivery-done"></i>
            </div>
        </div>
        <ul id="delivery-dropdown">
            {#deliveryTypes}
                <li {@eq key=checked value="true"}class="selected"{/eq}>
                    <label class="checkbox-label">
                        <span class="checkbox-icon" data-name="delivery" data-id="{id}" data-category="{description}"></span>
                        {@ne key=iconset value=""}
                            <i class="sh-iconset {iconset}"></i>
                        {/ne}
                        <span class="checkbox-text">{description}</span>
                    </label>
                </li>
            {/deliveryTypes}
        </ul>
        <div class="footer"><span id="delivery-done" class="delivery-done">Done</span></div>
    </div>
</div>

